<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ConversiÃ³n de Longitud"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <EditText
            android:id="@+id/et_longitud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Introduce una longitud"/>

        <Spinner
            android:id="@+id/sp_unidad_origen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/unidades_longitud"
            android:prompt="@string/selecciona_unidad_origen"/>

        <Spinner
            android:id="@+id/sp_unidad_destino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/unidades_longitud"
            android:prompt="@string/selecciona_unidad_destino"/>

        <Button
            android:id="@+id/btn_convertir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Convertir"
            android:layout_gravity="center"
            android:onClick="convertirLongitud"/>

        <TextView
            android:id="@+id/tv_resultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resultado"
            android:textSize="18sp"
            android:gravity="center"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>